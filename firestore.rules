rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function sameUser(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // Sandbox baseline: only let each user touch their own healthcheck doc.
    match /healthchecks/{uid} {
      allow read, create, update: if sameUser(uid);
      allow delete: if false;
    }

    // Deny everything else by default until explicit rules are added.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
